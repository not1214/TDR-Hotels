<div class="container-fluid">

  <div class="row justify-content-center">
    <h3 style="border-bottom: 2px solid #FF9933">ギャラリー</h3>
  </div>

  <div class="row justify-content-end mb-3 mr-5">
    <div class="ml-5">
      <%= link_to new_admin_picture_path do %>
        <i class="far fa-plus-square fa-3x"></i>
      <% end %>
    </div>
  </div>

  <div class="row justify-content-center mx-auto">
    <div class="d-flex flex-wrap">
      <% @pictures.each do |picture| %>
      <div class="lightbox2 mb-3 mx-2">
        <%= link_to Refile.attachment_url(picture, :image), "data-lightbox": "pictures", "data-title": picture.image_name do %>
          <%= attachment_image_tag picture, :image, :fill, 200, 200 %>
          <div style="font-size:10px"><%= picture.image_name %></div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-center"><%= paginate @pictures %></div>

</div>
