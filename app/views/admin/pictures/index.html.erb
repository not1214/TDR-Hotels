<div class="container-fluid">

  <div class="row justify-content-center">
    <h3 style="border-bottom: 2px solid #FF9933">ギャラリー</h3>
  </div>

  <div class="row justify-content-end mb-3 mr-5">
    <div class="ml-5">
      <%= link_to new_admin_picture_path do %>
        <i class="far fa-plus-square fa-3x"></i>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="d-flex flex-wrap justify-content-center">
      <% @pictures.each do |picture| %>
      <div class="mb-3 mx-1">
      <%= link_to Refile.attachment_url(picture, :image), "data-lightbox": "pictures", "data-title": picture.image_name do %>
        <%= attachment_image_tag picture, :image, :fill, 250, 230 %>
        <div style="font-size:10px"><%= picture.image_name %></div>
      <% end %>
        <div class="text-right" style="font-size:10px">
          <%= link_to "削除", admin_picture_path(picture), method: :delete, data: { confirm: "画像を削除してもよろしいですか？" }, class: "text-danger" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-center"><%= paginate @pictures %></div>

</div>
