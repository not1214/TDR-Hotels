<div class="container-fluid">

  <div class="row justify-content-center mb-3">
    <h3 style="border-bottom: 2px solid #FF9933">ギャラリー</h3>
  </div>

  <div class="row justify-content-center">
    <div class="d-flex flex-wrap">
      <% @pictures.each do |picture| %>
      <div class="mb-3 mx-2">
        <%= link_to Refile.attachment_url(picture, :image), "data-lightbox": "pictures" do %>
          <%= attachment_image_tag picture, :image, :fill, 200, 200 %>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>

</div>
