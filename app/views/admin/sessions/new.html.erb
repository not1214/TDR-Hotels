<div class="container-fluid">
  <div class="row justify-content-center mb-3">
    <h2 style="border-bottom: 2px solid #FF9933">管理者ログイン</h2>
  </div>

  <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>

  <div class="row flex-column flex-md-row align-items-center justify-content-md-center">
    <%= f.label :"メールアドレス", class: "col-7 col-md-3 col-lg-2 font-weight-bold" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-6 col-md-3 form-control" %>
  </div>
  <div class="row flex-column flex-md-row align-items-center justify-content-md-center mt-3">
    <%= f.label :"パスワード", class: "col-7 col-md-3 col-lg-2 font-weight-bold" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "col-6 col-md-3 form-control" %>
  </div>
  <div class="row justify-content-center mt-3">
    <% if devise_mapping.rememberable? %>
      <div class="col-md-3 offset-md-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-center mt-3">
    <%= f.submit "ログイン", class: "col-md-1 btn btn-success" %>
  </div>
  <% end %>

</div>