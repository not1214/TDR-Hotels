<div class="container-fluid">
  <div class="row justify-content-center mb-3">
    <h2 style="border-bottom: 2px solid #FF9933">管理者ログイン</h2>
  </div>

  <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
  <div class="row">
  　<div class="mx-auto">
    　<%= render "public/shared/error_messages", resource: resource %>
      <table class="table table-borderless">
        <tr>
          <th><%= f.label :"メールアドレス" %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :"パスワード" %></th>
          <td><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></td>
        </tr>
        <tr>
          <td colspan="2">
            <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "ログイン", class: "btn btn-success" %></td>
        </tr>
      </table>
    </div>
  </div>
  <% end %>

</div>