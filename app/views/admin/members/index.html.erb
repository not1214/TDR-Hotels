<div class="container-fluid">
  <div class="row justify-content-center mb-3">
    <h3 style="border-bottom: 2px solid #FF9933">会員一覧</h3>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <table class="table table-border table-striped">
        <tr style="background-color: #99FFCC">
          <th>会員ID</th>
          <th>ユーザー名</th>
          <th>氏名</th>
          <th>ステータス</th>
        </tr>
        <% @members.each do |member| %>
        <tr>
          <td><%= member.id %></td>
          <td>
            <%= link_to "/admin/#{member.username}" do %>
              <%= member.username %>
            <% end %>
          </td>
          <td><%= member.last_name %> <%= member.first_name %></td>
          <td>
            <% if member.is_deleted? %>
              退会
            <% else %>
              有効
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center mt-2"><%= paginate @members %></div>

</div>
