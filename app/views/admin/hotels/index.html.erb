<div class="container-fluid">
  <div class="row justify-content-center mb-3">
    <h3 style="border-bottom: 2px solid #FF9933">ホテル一覧</h3>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-3 d-flex flex-column">
      <div>
        <%= render "layouts/category_search", categories: @categories %>
      </div>
      <div class="mt-3">
        <%= render "layouts/area_search", areas: @areas %>
      </div>
    </div>

    <div class="col-md-9">
      <div class="text-right mr-5 mb-2">
        <%= link_to "ホテルを登録する", new_admin_hotel_path, class: "btn btn-info" %>
      </div>

      <div class="d-flex flex-wrap" width="250">
        <% @hotels.each do |hotel| %>
        <div class="d-flex flex-column flex-fill mb-2">
          <div>
            <% hotel.hotel_images.first(1).each do |image| %>
              <%= attachment_image_tag image, :image, :fill, 220, 165 %>
            <% end %>
          </div>
          <div style="font-size: 14px"><strong><%= hotel.hotel_name %></strong></div>
          <div style="font-size: 12px">カテゴリー名：<%= hotel.category.category_name %></div>
          <div style="font-size: 12px">エリア名：<%= hotel.area.area_name %></div>
          <div style="font-size: 12px">評価：</div>
        </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
