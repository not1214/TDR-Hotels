<%= render "layouts/map", hotel: @hotel %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <%= render "layouts/hotel", hotel: @hotel %>
    </div>
    <div class="col-md-9">
      <h5><span style="border-bottom: 2px solid #FF9933"><%= @hotel.hotel_name %>のレビュー一覧</span></h5>
      <% @reviews.each do |review| %>
      <div>
        <%= link_to mypage_path(review.member) do %>
          <%= attachment_image_tag review.member, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
        <p class="ml-3"><%= review.member.username %></p>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>
