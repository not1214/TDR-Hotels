<div class="container-fluid">

  <div class="row justify-content-center mb-3">
    <h3 style="border-bottom: 2px solid #FF9933">ホテルランキング</h3>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-5 offset-md-1">
      <h5><span style="border-bottom: 2px solid #FF9933">おすすめホテル</span></h5>
      <% last_rate = 0 %>
      <% rank = 1 %>
      <% @rate_ranks.each.with_index(1) do |hotel, i|%>
        <% if hotel.reviews.average(:rate).to_f.round(1) != last_rate %>
        <div class="d-flex">
          <div class="d-flex flex-column mt-2">
            <% rank = i %>
            <div class="pl-1" style="border-left: 3px solid #007bff"><%= rank %> 位</div>
            <div>
              <%= link_to hotel_path(hotel) do %>
                <div style="font-size:16px"><%= hotel.hotel_name %></div>
                <% hotel.hotel_images.first(1).each do |image| %>
                  <div><%= attachment_image_tag image, :image, :fill, 350, 250 %></div>
                <% end %>
              <% end %>
            </div>
          </div>
            <% last_rate = hotel.reviews.average(:rate).to_f.round(1) %>
          <div class="d-flex flex-column ml-2 mt-auto">
            <div style="font-size:12px; border-bottom: 2px solid #007bff">評価：<%= hotel.avg_rate %> 点（5点満点）</div>
            <div style="font-size:9px">カテゴリ：<%= hotel.category.category_name %></div>
            <div style="font-size:9px">エリア：<%= hotel.area.area_name %></div>
          </div>
        </div>

        <% else %>
        <div class="d-flex">
          <div class="d-flex flex-column mt-2">
            <div class="pl-1" style="border-left: 3px solid #007bff"><%= rank %> 位</div>
            <div>
              <%= link_to hotel_path(hotel) do %>
                <div style="font-size:16px"><%= hotel.hotel_name %></div>
                <% hotel.hotel_images.first(1).each do |image| %>
                  <div><%= attachment_image_tag image, :image, :fill, 350, 250 %></div>
                <% end %>
              <% end %>
            </div>
          </div>
            <% last_rate = hotel.reviews.average(:rate).to_f.round(1) %>
          <div class="d-flex flex-column ml-2 mt-auto">
            <div style="font-size:12px; border-bottom: 2px solid #007bff">評価：<%= hotel.avg_rate %> 点（5点満点）</div>
            <div style="font-size:9px">カテゴリ：<%= hotel.category.category_name %></div>
            <div style="font-size:9px">エリア：<%= hotel.area.area_name %></div>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>

    <div class="col-md-5">
      <h5><span style="border-bottom: 2px solid #FF9933">人気のホテル</span></h5>
      <% last_favorite = 0 %>
      <% rank = 1 %>
      <% @favorite_ranks.each.with_index(1) do |hotel, i|%>
        <% if hotel.favorites.count != last_favorite %>
        <div class="d-flex">
          <div class="d-flex flex-column mt-2">
            <% rank = i %>
            <div class="pl-1" style="border-left: 3px solid #007bff"><%= rank %> 位</div>
            <div>
              <%= link_to hotel_path(hotel) do %>
                <div style="font-size:16px"><%= hotel.hotel_name %></div>
                <% hotel.hotel_images.first(1).each do |image| %>
                  <div><%= attachment_image_tag image, :image, :fill, 350, 250 %></div>
                <% end %>
              <% end %>
            </div>
          </div>
            <% last_favorite = hotel.favorites.count %>
          <div class="d-flex flex-column ml-2 mt-auto">
            <div style="font-size:12px"><span style="border-bottom: 2px solid #007bff">お気に入り：<%= hotel.favorites.count %>　</div>
            <div style="font-size:12px">評価：<%= hotel.avg_rate %> 点（5点満点）</div>
            <div style="font-size:9px">カテゴリ：<%= hotel.category.category_name %></div>
            <div style="font-size:9px">エリア：<%= hotel.area.area_name %></div>
          </div>
        </div>

        <% else %>
        <div class="d-flex">
          <div class="d-flex flex-column mt-2">
            <div class="pl-1" style="border-left: 3px solid #007bff"><%= rank %> 位</div>
            <div>
              <%= link_to hotel_path(hotel) do %>
                <div style="font-size:16px"><%= hotel.hotel_name %></div>
                <% hotel.hotel_images.first(1).each do |image| %>
                  <div><%= attachment_image_tag image, :image, :fill, 350, 250 %></div>
                <% end %>
              <% end %>
            </div>
          </div>
            <% last_favorite = hotel.favorites.count %>
          <div class="d-flex flex-column ml-2 mt-auto">
            <div style="font-size:12px"><span style="border-bottom: 2px solid #007bff">お気に入り：<%= hotel.favorites.count %> </span></div>
            <div style="font-size:12px">評価：<%= hotel.avg_rate %> 点（5点満点）</div>
            <div style="font-size:9px">カテゴリ：<%= hotel.category.category_name %></div>
            <div style="font-size:9px">エリア：<%= hotel.area.area_name %></div>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>

</div>
