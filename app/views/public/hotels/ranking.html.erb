<div class="container-fluid">
  <div class="row justify-content-center mb-3">
    <h3 style="border-bottom: 2px solid #FF9933">ホテルランキング</h3>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-5">
      <h6>評価順</h6>
      <div>
      <% last_rate = 0 %>
      <% rank = 1 %>
      <% @ranks.each.with_index(1) do |hotel, i|%>
        <% if hotel.reviews.average(:rate).to_f.round(1) != last_rate %>
          <% rank = i %>
          <div><%= rank %> 位</div>
          <div><%= hotel.hotel_name %></div>
          <% last_rate = hotel.reviews.average(:rate).to_f.round(1) %>
        <% else %>
          <div>
           <%= rank %> 位<%= hotel.hotel_name %>
          </div>
          <% last_rate = hotel.reviews.average(:rate).to_f.round(1) %>
        <% end %>
      <% end %>
      </div>
    </div>
    <div class="col-md-5">

    </div>
  </div>
