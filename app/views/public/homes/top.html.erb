<div class="container-fluid">

  <div class="slider-top row justify-content-center">
    <div class="slider-image">
      <div><%= image_tag 'IMG_9429-min.jpg', width: 700, height: 400 %></div>
      <div class="slider-text">運動公園</div>
    </div>
    <div class="slider-image">
      <div><%= image_tag 'IMG_9360-min.jpg', width: 700, height: 400 %></div>
      <div class="slider-text">総合公園</div>
    </div>
    <div class="slider-image">
      <div><%= image_tag 'IMG_9428-min.jpg', width: 700, height: 400 %></div>
      <div class="slider-text">東京ディズニーリゾート</div>
    </div>
    <div class="slider-image">
      <div><%= image_tag 'IMG_9462-min.jpg', width: 700, height: 400 %></div>
      <div class="slider-text">ベイサイドステーション</div>
    </div>
    <div class="slider-image">
      <div><%= image_tag 'IMG_9499-min.jpg', width: 700, height: 400 %></div>
      <div class="slider-text">東京ディズニーシー</div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-3 d-flex flex-column">
      <div>
        <%= render "layouts/category_search", categories: @categories %>
      </div>
      <div class="mt-3">
        <%= render "layouts/area_search", areas: @areas %>
      </div>
    </div>

    <div class="col-md-9">

      <div class="d-flex flex-wrap">
        <% @hotels.each do |hotel| %>
        <div class="d-flex flex-column mb-3 mr-3">
          <div>
            <% hotel.hotel_images.first(1).each do |image| %>
              <%= attachment_image_tag image, :image, :fill, 230, 200 %>
            <% end %>
          </div>
          <div style="font-size: 13px" width="250"><strong><%= hotel.hotel_name %></strong></div>
          <div style="font-size: 11px">カテゴリー名：<%= hotel.category.category_name %></div>
          <div style="font-size: 11px">エリア名：<%= hotel.area.area_name %></div>
          <div style="font-size: 11px">評価：<%= hotel.avg_rate %> 点（5点満点）</div>
        </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
