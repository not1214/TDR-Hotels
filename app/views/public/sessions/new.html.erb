<div class="container-fluid">
  <div class="row justify-content-center mb-3">
    <h2 style="border-bottom: 2px solid #FF9933">会員ログイン</h2>
  </div>

  <%= form_with model: @member, url: member_session_path, local: true do |f| %>

  <div class="row justify-content-center">
    <%= f.label :"メールアドレス", class: "col-7 col-md-3 col-lg-2 font-weight-bold text-left" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-6 col-md-3 form-control" %>
  </div>
  <div class="row justify-content-center mt-3">
    <%= f.label :"パスワード", class: "col-7 col-md-3 col-lg-2 font-weight-bold text-left" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "col-6 col-md-3 form-control" %>
  </div>
  <div class="row justify-content-center mt-3">
    <% if devise_mapping.rememberable? %>
      <div class="col-md-3 col-lg-3 offset-md-2 text-center text-md-left">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-center mt-3">
    <%= f.submit "ログイン", class: "col-4 col-md-2 btn btn-success" %>
  </div>
  <% end %>

  <div class="row justify-content-center mt-4">
    <h4 style="border-bottom: 2px solid #FF9933">会員登録されていない方</h4>
  </div>

  <div class="row justify-content-center mb-5">
    <h6><%= link_to "こちら", new_member_registration_path %>から会員登録してください。</h6>
  </div>

</div>